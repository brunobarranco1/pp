#include <stdio.h>
#include <stdlib.h>

int main (){
    //num int > 1
    int a, b=0, i;
 
    printf ("Digite um numero\n");
    scanf ("%d",&a);
    if (a <= 1){
        printf ("somente numeros maiores que um ");
        return 0;
    }
    
    for(i=1;i <= a;i++){
        b += i;
        
    }
    printf ("b:%d \n",b);
 
    return 0;
    }
